---
import Layout from '../layouts/Layout.astro';
import Card from "./../components/Card.astro"

import linksData from "../links.json";

---

<Layout title='NUTN'>
	<div class="flex flex-col items-center gap-6 h-full">
		<!-- 
			<div>
				<div class="
				flex gap-4 
				p-1 rounded-lg bg-gray-100
				
				">
					<p class="rounded-md py-1 px-4  font-semibold text-gray-800 bg-white">Fagelig</p>
					<p class="rounded-md py-1 px-4  font-semibold text-gray-600">Begge</p>
					<p class="rounded-md py-1 px-4  font-semibold text-gray-600">Sosialt</p>
