---
import Header from "../components/Header.astro"
import Footer from "./../components/Footer.astro"

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/nutn/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="overflow-y-scroll dark:bg-gray-900 min-h-screen flex flex-col">
		<Header>

		</Header>
		<main class="container mx-auto p-4 flex-1" id="main-content">
			<slot />
		</main>
		<Footer>

		</Footer>
	</body>
</html>
